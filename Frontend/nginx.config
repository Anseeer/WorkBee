server {
  listen 80;
  server_name localhost;

  add_header Cross-Origin-Opener-Policy "unsafe-none" always;
  add_header Cross-Origin-Embedder-Policy "unsafe-none" always;
  add_header Cross-Origin-Resource-Policy "cross-origin" always;
  add_header Cross-Origin-Resource-Policy "same-site" always;


  # Serve your built frontend
  root /usr/share/nginx/html;
  index index.html;

  # Main app routes (SPA handling)
  location / {
    try_files $uri /index.html;
  }

  # API routes -> Proxy to backend Cloud Run URL
  location /api/ {
    proxy_pass https://workbee-backend-170764750094.asia-south1.run.app/api/;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header Cookie $http_cookie;  
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_cache_bypass $http_upgrade;
  }

  # Socket.io (real-time) proxy
  location /socket.io/ {
    proxy_pass https://workbee-backend-170764750094.asia-south1.run.app/socket.io/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # Razorpay endpoint proxy
  location /rzp/ {
    proxy_pass https://workbee-backend-170764750094.asia-south1.run.app/rzp/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_cache_bypass $http_upgrade;
  }

  # Cloudinary direct pass-through
  location ~* ^/v1_1/ {
    proxy_pass https://api.cloudinary.com;
  }

  # Optional: Disable caching for index.html
  location = /index.html {
    add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
  }
}
